<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle" >
        <solid android:color="@color/green"/>
<padding android:bottom="20sp"/>
    </shape>

</item>

    <item android:top="30sp" android:left="50sp" android:right="50sp" android:bottom="30sp" >
        <shape android:shape="oval" >

            <size android:width="20dp" android:height="5sp"/>
            <solid android:color="@color/black"/>
        </shape>
    </item>

    <item android:bottom="200sp" android:top="40sp">
        <shape android:shape="oval">

            <size android:width="0sp" android:height="50sp"/>
            <solid android:color="@color/red"/>
        </shape>
    </item>
</layer-list>